{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "nodenext",
        "target": "ES2020",
        "allowJs": true,
        "checkJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowUnreachableCode": false,
        "strict": true,
        "noPropertyAccessFromIndexSignature": true,
        "noEmit": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
