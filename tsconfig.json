{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ESNext",
        "allowJs": true,
        "checkJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowUnreachableCode": false,
        "strict": true,
        "noPropertyAccessFromIndexSignature": true,
        "noEmit": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
          "./lib/@types"
        ]
    },
    "include": [
      "./server.ts",
      "lib/**/*.{js,ts}"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "coverage"
    ]
}
